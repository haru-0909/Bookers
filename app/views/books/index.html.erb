<h1>Books</h1>

<% @books.each do |book| %>

<p>title</p>
<span><%= book.title %></span>

<p>body</p>
<span><%= book.body %></span>
<span>
  <%= link_to "show", book_path(book.id) %>
</span>
<span>
  <%= link_to "edit", edit_book_path(book.id) %>
</span>
<%= link_to "destroy", book_path(book.id), method: :delete, "deta-confirm" => "本当に削除しますか？" %>
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_area :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>