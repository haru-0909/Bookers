<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
   <h4>Title</h4>
   <%= f.text_field :title %>
  </div>
  <div class="field">
   <h4>Body</h4>
   <%= f.text_area :body %>
  </div>
   <div class="create">
   <%= f.submit 'Update Book' %>
   </div>
  </div>

<% end %>

<span>
  <%= link_to "show", book_path %>
</span>

<span>
  <%= link_to "back", '/books' %>
</span>
